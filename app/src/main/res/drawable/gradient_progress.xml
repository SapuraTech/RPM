<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <rotate
            android:fromDegrees="270"
            android:toDegrees="270"
            android:pivotX="50%"
            android:pivotY="50%" >
        <shape
            android:shape="ring"
            android:thicknessRatio="20"
            android:useLevel="false">
            <solid android:color="@color/calender_bg"/>
        </shape>
        </rotate>
    </item>
    <item>
        <rotate
            android:fromDegrees="270"
            android:toDegrees="270"
            android:pivotX="50%"
            android:pivotY="50%" >
        <shape android:shape="ring"
            android:thicknessRatio="20"
            android:useLevel="true">
            <gradient
                android:angle="0"
                android:endColor="#7150eb"
                android:startColor="#b550eb"
                android:type="linear" />
        </shape>
        </rotate>
    </item>

</layer-list>