<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/circle_bg"
    tools:context=".ProfileFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/textProfile"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textSize="35dp"
        android:fontFamily="sans-serif-black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgbg"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:src="@drawable/white_circle"
        app:layout_constraintBottom_toBottomOf="@+id/imgProfile"
        app:layout_constraintEnd_toEndOf="@+id/imgProfile"
        app:layout_constraintStart_toStartOf="@+id/imgProfile"
        app:layout_constraintTop_toTopOf="@id/imgProfile"/>
    <ImageView
        android:id="@+id/imgProfile"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="32dp"
        android:src="@drawable/round_account"
        app:layout_constraintTop_toBottomOf="@id/textProfile"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/imgProfile">

        <TextView
            android:id="@+id/textName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="10dp"
            android:layout_marginLeft="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <EditText
            android:id="@+id/editName"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/edit_icon"
            android:textSize="10dp"
            android:text="Amirul"
            app:layout_constraintTop_toBottomOf="@+id/textName"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/textGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:textSize="10dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/editName"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/editGender"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:text="Male"
            android:drawableRight="@drawable/edit_icon"
            app:layout_constraintTop_toBottomOf="@+id/textGender"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/textAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age"
            android:textSize="10dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/editGender"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/editAge"
            android:layout_width="300dp"
            android:textSize="10dp"
            android:text="25"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/edit_icon"
            app:layout_constraintTop_toBottomOf="@+id/textAge"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/textCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Country"
            android:textSize="10dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/editAge"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/editCountry"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:text="Malaysia"
            android:drawableRight="@drawable/edit_icon"
            app:layout_constraintTop_toBottomOf="@+id/textCountry"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/textContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact no."
            android:textSize="10dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/editCountry"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/editContact"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:text="0123456789"
            android:drawableRight="@drawable/edit_icon"
            app:layout_constraintTop_toBottomOf="@+id/textContact"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/textTargetStepCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Target Step Count"
            android:textSize="10dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/editContact"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/editTargetStepCount"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:text="5000"
            android:drawableRight="@drawable/edit_icon"
            app:layout_constraintTop_toBottomOf="@+id/textTargetStepCount"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/textKcalBurn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Target Kcal burn"
            android:textSize="10dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/textTargetStepCount"
            app:layout_constraintStart_toEndOf="@id/textTargetStepCount" />

        <EditText
            android:id="@+id/editKcalBurn"
            android:layout_width="120dp"
            android:text="500 per day"
            android:textSize="10dp"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/edit_icon"
            app:layout_constraintBottom_toBottomOf="@+id/editTargetStepCount"
            app:layout_constraintStart_toEndOf="@id/editTargetStepCount"            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonLogout"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:letterSpacing="0.01"
            app:layout_constraintTop_toBottomOf="@+id/editTargetStepCount"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:cornerRadius="10dp"
            android:text="Logout"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:letterSpacing="0.01"
            app:layout_constraintTop_toBottomOf="@+id/editTargetStepCount"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonSave"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:cornerRadius="10dp"
            android:text="Save"
            android:textAllCaps="false"
            android:backgroundTint="@color/iconcolor"
            android:textColor="@color/white"
            android:letterSpacing="0.01"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/buttonLogout"
            app:layout_constraintStart_toEndOf="@id/buttonLogout" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>